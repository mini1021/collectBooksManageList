<form action="" method="post" class="form-horizontal" name="send">
    <div class="row">
        <h1 class="col-md-6 col-md-offset-3 col-xs-10 col-xs-offset-1 page_title ">新增</h1>
    </div>
    <div class="form-group">
        <label for="username" class="col-sm-3 control-label">BookName：</label>
        <div class="col-sm-8">
            <div class="input-group">
                <input type="text" class="form-control" name="bookName" placeholder="請輸入書名">
                <div class="input-group-addon">
                    <span class="glyphicon glyphicon-book"></span>
                </div>
            </div>
        </div>
    </div>
    <div class="form-group">
        <label for="username" class="col-sm-3 control-label">No：</label>
        <div class="col-sm-8">
            <div class="input-group">
                <input type="text" class="form-control" name="episode" placeholder="請輸入集數">
                <div class="input-group-addon">
                    <span class="glyphicon glyphicon-pencil"></span>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-3 col-md-offset-3 col-xs-12">
            <button type="reset" class="btn btn-default btn-block">
                <b>&nbsp&nbsp清空&nbsp&nbsp</b>
                <span class="glyphicon glyphicon-remove" style="color:red"></span>
            </button>
        </div>
        <div class="col-md-3 col-xs-12">
            <button type="submit" class="btn btn-default btn-block">
                <b>&nbsp&nbsp送出&nbsp&nbsp</b>
                <span class="glyphicon glyphicon-arrow-right" style=" color:green"></span>
            </button>
        </div>
</form>
